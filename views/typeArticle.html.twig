{% extends "layout.html.twig" %}

{% block title %}TypeArticle{% endblock %}

{% block content %}
<div id="content">
	<h2 class="text-center">{{ libelleType }}</h2>
	<div class="row">
	{% for article in articles %}
	
		<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
			<div class="thumbnail">
				<div class="caption"> <h3 class="text-center"> {{ article.libelle }} </h3> </div>
				<a href="/article/{{ article.code }}">
					<img class="img-responsive" ; src="{{ app.request.basepath }}/images/{{ article.code }}.jpg" alt="LogoChic "/>
				</a>
			</div>
		</div>
		{% else %}
			Pas d'article pour le moment.
		{% endfor %}
	</div>
</div>
{% endblock %}
