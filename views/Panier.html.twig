{% extends "layout.html.twig" %}

{% block title %}Panier{% endblock %}

{% block content %}
<h2 class="text-center">Mon panier</h2>



	{% if articles is empty %}

    <div class="alert alert-info">
        <strong>Info!</strong> Votre panier est vide !
        </div>
	{% else %}
		<div class="row">
		{% for article in articles %}
			<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
				<div class="thumbnail">
					<div class="caption"> <h3 class="text-center">{{ article.libelle }} <small>{{ "%.2f €"|format(article.prix) }}</small></h3></div>
					<a href="/article/{{ article.code }}">
			         <img class="img-responsive" style="border-radius: 50px; border:4px solid white; width:100px; height:100px; box-shadow: 1px 1px 10px #555;" src="{{ app.request.basepath }}/images/{{ article.code }}.jpg" alt="LogoChic "/>
                    </a>
                    <a type="submit" href="/panier/enlever/{{ app.security.token.user.id }}/{{ article.code }}" class="btn btn-danger">
							Enlever du panier
				    </a>
				</div>
			</div>
		{% endfor %}
		</div>
		<h2>Total de votre commande: {{ "%.2f €"|format(prix) }}</h2> </br>

		<a type="submit" href="/panier/{{ app.security.token.user.id }}" class="btn btn-primary">
			Acheter
		</a>
					
	
	{% endif %}
   
{% endblock %}
